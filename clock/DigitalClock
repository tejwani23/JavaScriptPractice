<!DOCTYPE html>
<html>
    <head>
        <title>Digital Clock</title>
        <style type="text/css">
         body{
             background-color: #161826;
         }
         #disp{
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translateX(-50%) translateY(-50%);
            color: white;
            border: 1px solid #ccc;
            padding: 2vw 2vw;
            font-size: 4vw;
         }
        </style>
    </head>
    <body>
         <div id="disp"></div>
         <script>
            function showTime()
            {
             var date= new Date();
             var h=date.getHours();
             var m=date.getMinutes();
             var s=date.getSeconds();
             var session="AM";

             //for 12 hour clock
             if(h==0)
             {
                 h=12;
             }
             if(h>12)
             {
                 h=h-12;
                 session="PM";
             }
             //appending an extra 0 for single digit number
             //using single line expression instead of if else
             h=(h<10)? "0"+h : h;
             m=(m<10)? "0"+m : m;
             s=(s<10)? "0"+s : s;

             var time= h+":"+m+":"+s+" "+session;
             document.getElementById("disp").innerHTML=time;

             setTimeout(showTime,1000);
            }
            showTime();
         </script>
    </body>
</html>
